# Lead Machine Configuration
# Copy this file to .env and fill in your values

# ===================
# Application Settings
# ===================

# API Key for authentication (required for all endpoints)
API_KEY=your-secure-api-key-here

# Debug mode (set to true for development)
DEBUG=false

# ===================
# GoHighLevel Settings
# ===================

# GHL API Key (get from Settings > Business Profile > API Keys)
GHL_API_KEY=your-ghl-api-key

# GHL Location ID (get from Settings > Business Profile)
GHL_LOCATION_ID=your-location-id

# ===================
# Database Settings
# ===================

# SQLite database path (relative to /app in Docker)
DATABASE_URL=sqlite:///./data/leadmachine.db

# ===================
# Redis Settings
# ===================

# Redis connection URL
REDIS_URL=redis://redis:6379/0

# ===================
# Scraper Settings
# ===================

# Maximum pages to crawl per domain
SCRAPER_MAX_PAGES=20

# Rate limit (requests per second per domain)
SCRAPER_RATE_LIMIT=2.0

# Request timeout in seconds
SCRAPER_TIMEOUT=30

# ===================
# Verifier Settings
# ===================

# SMTP verification timeout in seconds
VERIFIER_SMTP_TIMEOUT=10

# Maximum concurrent SMTP connections
VERIFIER_MAX_CONCURRENT=5

# Cache verification results for X days
VERIFIER_CACHE_DAYS=7

# ===================
# Warmup Settings
# ===================

# Inbox check interval in seconds (default: 300 = 5 minutes)
WARMUP_CHECK_INTERVAL=300

# Probability of replying to warmup emails (0.0 - 1.0)
WARMUP_REPLY_PROBABILITY=0.7

# Minimum delay before replying (seconds)
WARMUP_MIN_REPLY_DELAY=300

# Maximum delay before replying (seconds)
WARMUP_MAX_REPLY_DELAY=1800

# ===================
# Security Settings
# ===================

# Fernet encryption key for storing SMTP/IMAP passwords
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here
